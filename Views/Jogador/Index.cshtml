@model Jogador
@{
    ViewData[ "Title" ] = "Jogadores";
}

<form method= "POST" action='@Url.Action("Cadastrar")'>

    <label>ID</label>
    <input type= "text" name= "IDJogador" />

    <label>Nome</label>
    <input type= "text" name= "Nome" />

    <label>IDEquipe</label>
    <input type= "text" name= "IDEquipe" />

    <button type="submit">Cadastrar</button>


</form>

<table class="table table-striped table-responsive">

    <thead>

        <th>ID</th>
        <th>Nome</th>
        <th>ID Equipe</th>

    </thead>

    <tbody>
        @foreach (var item in ViewBag.Jogadores)
        {
            <tr>

                <td>@item.IDJogador</td>
                <td>@item.Nome</td>
                <td>@item.IDEquipe</td>
                
            </tr>
        }
    </tbody>

</table>