
@model Equipe 
@{
    ViewData["Title"] = "Equipes";
}

<form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <label>ID</label>
    <input type="text" name="IDEquipe">

    <label>Nome</label>
    <input type="text" name="Nome">

    <label>Imagem</label>
    <input type="file" name="Imagem">

    <button type="submit">Cadastrar</button>

</form>

<table class="table table-striped table-responsive">

    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
    </thead>
    <tbody>

        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IDEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px"></td>
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IDEquipe">Excluir</a></td>
            </tr>
        }
    </tbody>

</table>